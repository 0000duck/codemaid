<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.Options.Progressing">
    <DataTemplate DataType="{x:Type local:ProgressingViewModel}">
        <StackPanel>
            <CheckBox Content="Show build progress window when a build starts"
                    IsChecked="{Binding ShowBuildProgressOnBuildStart}" />
            <CheckBox Content="Hide build progress window when a build stops"
                    IsChecked="{Binding HideBuildProgressOnBuildStop}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>