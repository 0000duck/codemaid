<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.UI.Dialogs.Options.Compatibility"
        xmlns:cnv="clr-namespace:SteveCadwallader.CodeMaid.UI.Converters">
    <DataTemplate DataType="{x:Type local:CompatibilityViewModel}">
        <StackPanel>
            <GroupBox Header="ReSharper">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap">
                        If ReSharper is installed, you can run ReSharpers silent cleanup whenever CodeMaid cleans a file.
                        For this to take effect, ReSharper must already have silent cleanup configured.
                    </TextBlock>
                    <CheckBox Content="Use ReSharper silent cleanup when cleaning files" IsChecked="{Binding UseResharperSilentCleanup}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>